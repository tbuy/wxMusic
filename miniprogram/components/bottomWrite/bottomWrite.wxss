@import "../../iconfont.wxss";
.bottomWrite {
  height: 240rpx;
  width: 100%;
  padding: 40rpx 30rpx 30rpx;
  position: fixed;
  bottom: 0;
  background-color: #fff;
  box-sizing: border-box;
  box-shadow: -5rpx -5rpx 5px #f5f5f5;
}
textarea {
  width: auto;
  height: 180rpx;
  background-color: #f5f5f5;
  font-size: 30rpx;
  border-radius: 10rpx;
  padding: 20rpx;
  box-sizing: border-box;
}
.send {
  font-size: 28rpx;
  color: #fff;
  width: 100rpx;
  height: 50rpx;
  line-height: 50rpx;
  border-radius: 10rpx;
  background-color: #d43c33;
  text-align: center;
  position: absolute;
  right: 50rpx;
  bottom: 40rpx;
  z-index: 3;
}
.close {
  font-size: 30rpx;
  position: absolute;
  top: 5rpx;
  right: 5rpx;
}