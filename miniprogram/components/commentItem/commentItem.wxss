.item {
  background-color: #fff;
  margin-top: 20rpx;
  padding: 30rpx;
  padding-bottom: 0;
}

.oneline {
  display: flex;
}

.header {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.name {
  font-size: 30rpx;
  margin-top: 5rpx;
}

.time {
  font-size: 24rpx;
  color: #ccc;
}

.twoline {
  margin-top: 20rpx;
  font-size: 26rpx;
}

.threeline {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  margin-top: 10rpx;
}

.image {
  width: 220rpx;
  height: 220rpx;
  margin-top: 14rpx;
  border-radius: 10rpx;

}

.fourline {
  margin-top: 20rpx;
  display: flex;
}

.pubBtn {
  flex: 1;
  text-align: center;
  line-height: 80rpx;
  font-size: 30rpx;
  color: #000;
  background-color: #fff;
  height: 80rpx;
  font-weight: 500;
  padding: 0;
}
