
function timeFilter(time){
    var date = getDate(time);
    var y = date.getFullYear();
    var M = date.getMonth() + 1;
    M = M > 9 ? M : '0' + M;
    var d = date.getDate();
    d = d > 9 ? d : '0' + d;
    var h = date.getHours();
    h = h > 9 ? h : '0' + h;
    var m = date.getMinutes();
    m = m > 9 ? m : '0' + m;
    var s = date.getSeconds();
    s = s > 9 ? s : '0' + s;
    return y + '-' + M + '-' + d + ' ' + h + ':' + m + ':' + s
}
function dateFilter(time) {
  var date = getDate(time);
  var y = date.getFullYear();
  var M = date.getMonth() + 1;
  M = M > 9 ? M : '0' + M;
  var d = date.getDate();
  d = d > 9 ? d : '0' + d;
  var h = date.getHours();
  h = h > 9 ? h : '0' + h;
  var m = date.getMinutes();
  m = m > 9 ? m : '0' + m;
  var s = date.getSeconds();
  s = s > 9 ? s : '0' + s;
  return y + '-' + M + '-' + d 
}
module.exports = {
  timeFilter: timeFilter,
  dateFilter: dateFilter
};
