.commentlist {
  min-height: 100vh;
  background-color: #f5f5f5;
}

.list {
  margin-top: 20rpx;
  background-color: #fff;
}

.title {
  line-height: 80rpx;
  border-bottom: 1rpx solid #f5f5f5;
  padding: 0 30rpx;

}

.item {
  border-bottom: 1rpx solid #f5f5f5;
  padding: 0 30rpx 20rpx;
}
.oneline {
  display: flex;
  font-size: 30rpx;
  margin-top: 20rpx;
}

.header {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}
.name {
  margin-top: 10rpx;
}
.twoline {
  margin-top: 20rpx;
}

.threeline {
  font-size: 24rpx;
  color: #ccc;
  margin-top: 20rpx;
}