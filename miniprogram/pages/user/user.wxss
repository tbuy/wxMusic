.user {
  background-color: #f8f8f8;
  height: 100vh;
}
.oneline{
  width: 100%;
  height: 400rpx;
  background-color: #d43c33;
  display: flex;
  flex-direction: column;
  align-items: center;
}
image {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  margin-top: 80rpx;
}
.name {
  margin-top: 30rpx;
  color: #fff;
  font-size: 30rpx;
}
.twoline {
  width: 90%;
  background-color: #fff;
  border-radius: 20rpx;
  margin: 50rpx auto;
}
.item {
  height: 100rpx;
  line-height: 100rpx;
  border-bottom: 1rpx solid #f5f5f5;
  padding: 0 30rpx;
}
.title {
  margin-left: 20rpx;
}
.right {
  float: right;
}